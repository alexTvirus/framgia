<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= t "tasks.task.box_title" %> : <%= @tasks.size %> <%= t "tasks.task.text" %>
    </h3>
  </div>
  <div class="box-header with-border">
    <div class="col-md-3">
      <%= button_to t("tasks.new.btn_add"), "#", class: "btn btn-block btn-primary",
        method: :get %>
    </div>
  </div>
  <div class="box-body">
    <%= render partial: "component/task_component/task_item", collection: @tasks, as: :task%>
  </div>
</div>
