<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= t "courses.index.title" %> : <%= @courses.size %>
    </h3>
  </div>

  <div class="box-body">
    <% @courses.each do |item| %>
    <hr>
    <p class="text-muted">
      <%= link_to item.name, "#" %>
    </p>
    <% end %>
  </div>
</div>
