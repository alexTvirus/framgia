<div class="box">
  <div class="box-header with-border">
    <h3 class="box-title">
      <%= t "users.member.member" %> : <%= total_member @trainers, @trainees %>
    </h3>
    <div class="box-tools pull-right">
    </div>
  </div>
  <div class="box-body">
    <%= t "users.member.trainers" %> :  <%= @trainers.size %>
    <% @trainers.each do |item| %>
    <hr>
    <p class="text-muted">
      <%= show_avatar_for item %>
      <%= link_to item.name, suppervisor_user_path(item) %>
    </p>
    <% end %>
  </div>
  <hr>
  <div class="box-body">
    <%= t "users.member.trainee" %> : <%= @trainees.size %>
    <% @trainees.each do |item| %>
    <hr>
    <p class="text-muted">
      <%= show_avatar_for item %>
      <%= link_to item.name, suppervisor_user_path(item) %>
    </p>
    <% end %>
  </div>
</div>
