<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("layouts._header.fts"), "#", id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("layouts._header.home"), root_path %></li>
        <li><%= link_to t("layouts._header.help"), help_path %></li>
        <% if logged_in? %>
          <% if current_user.suppervisor?  %>
            <li><%= link_to t("layouts._header.suppervisor"), suppervisor_users_path %></li>
          <% else %>
            <li><%= link_to t("layouts._header.users"), users_path %></li>
          <% end %>
          <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <%= t"layouts._header.account"%> <b class="caret"></b>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to t("layouts._header.profile"), current_user %></li>
            <li><%= link_to t("layouts._header.setting"), edit_user_path(current_user) %></li>
            <li class="divider"></li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t("layouts._header.login"), login_path %></li>
        <% end %>
        <li><%= link_to t("layouts._header.logout"),
              logout_path, method: :delete %></li>
      </ul>
    </nav>
  </div>
</header>
