<section class="content">
  <div class="row">
    <div class="col-md-3">
      <div class="box box-primary">
        <div class="box-body box-profile">
          <%= show_avatar_for @user %>
          <h3 class="profile-username text-center"><%= @user.name %></h3>
          <p class="text-muted text-center"><%= @user.email %></p>
          <%= link_to t("users.edit.btn_edit"), edit_suppervisor_user_path(@user),
          class: "btn btn-primary btn-block" %>
        </div>
      </div>
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title"><%= t "users.profile.about_me" %></h3>
        </div>
        <div class="box-body">
          <strong>
            <i class="fa fa-book margin-r-5"></i>
            <%= t "users.profile.education" %>
          </strong>
          <p class="text-muted">
            <%= @user.university %>
          </p>
          <hr>
          <strong>
            <i class="fa fa-file-text-o margin-r-5"></i>
            <%= t "users.profile.notes" %>
          </strong>
        </div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="nav-tabs-custom">
        <ul class="nav nav-tabs">
          <li>
            <a href="#timeline" data-toggle="tab">
              <%= t "users.profile.timeline" %>
            </a>
          </li>
          <li>
            <a href="#activity" data-toggle="tab">
              <%= t "users.profile.activity" %>
            </a>
          </li>
          <li>
            <a href="#progress" data-toggle="tab">
              <%= t "users.profile.progress" %>
            </a>
          </li>
          <li>
            <a href="#profile" data-toggle="tab">
              <%= t "users.profile.profile" %>
            </a>
          </li>
        </ul>
        <div class="tab-content">
          <div class="active tab-pane" id="timeline">
          </div>
          <div class="tab-pane" id="activity">
          </div>
          <div class="tab-pane" id="progress">
          </div>
          <div class="tab-pane" id="profile">
            <%= render "component/profile_component/boxprofile" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
